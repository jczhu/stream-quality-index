<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mfchen.streamqualityindex" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".RockyMuddy"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Rocky_Stream"
            android:label="@string/title_activity_rocky__stream"
            android:parentActivityName=".RockyMuddy"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.mfchen.streamqualityindex.RockyMuddy" />
        </activity>
        <activity
            android:name=".Muddy_Stream"
            android:label="@string/title_activity_muddy__stream"
            android:parentActivityName=".RockyMuddy"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.mfchen.streamqualityindex.RockyMuddy" />
        </activity>
        <activity
            android:name=".displayScoreMuddy"
            android:label="@string/title_activity_display_score_muddy"
            android:parentActivityName=".Muddy_Stream"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.mfchen.streamqualityindex.Muddy_Stream" />
        </activity>
        <activity
            android:name=".displayScoreRocky"
            android:label="@string/title_activity_display_score_rocky"
            android:parentActivityName=".Rocky_Stream"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.mfchen.streamqualityindex.Rocky_Stream" />
        </activity>
    </application>

</manifest>
